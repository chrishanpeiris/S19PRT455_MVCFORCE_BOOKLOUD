@model IEnumerable<BookStoreApp.DAL.Printer>

@{
    ViewData["Title"] = "Index";
}

<h2>Printer Store</h2>

<p>
    <a asp-action="Create">Add Printers</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Brand)</th>
            <th>@Html.DisplayNameFor(model => model.Model)</th>
            
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td> @Html.DisplayTextFor(modelItem => item.Name)</td>
            <td> @Html.DisplayTextFor(modelItem => item.Brand)</td>
            <td> @Html.DisplayTextFor(modelItem => item.Model)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="View" asp-route-id="@item.Id">View</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
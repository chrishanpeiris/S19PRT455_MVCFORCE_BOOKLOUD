@model IEnumerable<BookDetailsViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container p-3">
    <h2>Search Results</h2>
    
    <table class="table table-striped">
        <thead>
        <tr>
            <th>BookDetailsViewModel Name</th>
            <th>BookDetailsViewModel Author</th>
            <th>BookDetailsViewModel ISBN</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @Html.DisplayTextFor(modelItem => item.BookName)</td>
                <td> @Html.DisplayTextFor(modelItem => item.BookAuthor)</td>
                <td> @Html.DisplayTextFor(modelItem => item.BookIsbn)</td>
            </tr>
        }
        </tbody>
    </table>
</div>
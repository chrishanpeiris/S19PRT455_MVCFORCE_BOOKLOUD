@model object

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}



    <div class="container pt-3">
        <h2> Update Books</h2>
        <form>
            <div class="form-group">
                <label for="bookTitle">Book Title</label>
                <input type="text" class="form-control" id="bookTitle" placeholder="Enter book title">
            </div>
            <div class="form-group">
                <label for="bookAuthor">Author</label>
                <input type="text" class="form-control" id="bookAuthor" placeholder="Enter author name">
            </div>
            <div class="form-group">
                <label for="bookISBN">ISBN</label>
                <input type="text" class="form-control" id="bookISBN" placeholder="Enter ISBN">
            </div>
            <div class="form-group">
                <label for="universityNameLocation">University</label>
                <select id="universityNameLocation" class="form-control">
                    <option>Charles Darwin University - Darwin</option>
                    <option>Swinburne University - Melbourne</option>
                    <option>La Trobe Univeristy - Sydny</option>
                </select>
            </div>
            <div class="form-group">
                <label for="courseName">Course</label>
                <select id="courseName" class="form-control">
                    <option>Master of Information Technology (SE)</option>
                    <option>Master of Mechanical Engineering</option>
                    <option>Master of Data Science</option>
                </select>
            </div>
            <div class="form-group">
                <label for="unitCodeName">Unit</label>
                <select id="unitCodeName" class="form-control">
                    <option>PRT455 - Software Engineering Practice</option>
                    <option>PRT820 - Master Thesis</option>
                    <option>DLF544 - Web Technologies</option>
                </select>
            </div>
            <div class="form-group">
                <label for="bookImage">Book Image</label>
                <input type="file" class="form-control-file" id="bookImage">
            </div>
            <div class="form-group">
                <label for="bookPrice">Book Price</label>
                <input type="text" class="form-control" id="bookPrice" placeholder="Enter Book Price" required="true">
            </div>
            <div class="form-group">
                <label for="bookISBN">Book Description</label>
                <textarea class="form-control" id="bookISBN" placeholder="Enter book description"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>

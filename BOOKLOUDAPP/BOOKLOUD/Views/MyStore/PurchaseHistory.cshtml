@model object

@{
    ViewBag.Title = "Purchase History";
    Layout = "_Layout";
}
<div class="container pt-3">
    <h2>Purchases</h2>
    <a class="nav-link" asp-controller="MyStore" asp-action="Index"><i class="far fa-arrow-alt-circle-left"></i> Back to My Store.</a>
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">BookDetailsDALModelDetailsViewModel ID</th>
            <th scope="col">BookDetailsDALModelDetailsViewModel name</th>
            <th scope="col">Price (AU)</th>
            <th scope="col">Status</th>
            <th scope="col">Delete</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th scope="row">1</th>
            <td>Sustainability</td>
            <td>70</td>
            <td>Sent</td>
            <td><a href="#" class="removeLink">Remove</a></td>
        </tr>
        </tbody>
    </table>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
</div>

@model object

@{
    ViewBag.Title = "My Store";
    Layout = "_Layout";
}

<div class="container pt-3">
    <h2>My Store</h2>
<div class="container">
    <div class="row">
    <div class="card border-primary mb-3" style="max-width: 20rem;">
        <div class="card-body">
            <h4 class="card-title"><i class="fas fa-chart-line"></i> Recent Activity</h4>
            <p class="card-text">You will find all activities that you have done or still ongoing.</p>
            <a asp-controller="MyStore" asp-action="RecentActivities" class="btn btn-primary">View</a>
        </div>
    </div>
    <div class="card border-primary mb-3" style="max-width: 20rem;">
        <div class="card-body">
            <h4 class="card-title"><i class="fas fa-book-reader"></i> My Books</h4>
            <p class="card-text">You will find all books that you listed or sold here.</p>
            <a asp-controller="MyStore" asp-action="MyBooks" class="btn btn-primary">View</a>
        </div>
    </div>
        <div class="card border-primary mb-3" style="max-width: 20rem;">
            <div class="card-body">
                <h4 class="card-title"><i class="fas fa-clipboard-list"></i> Purchases</h4>
                <p class="card-text">You will find all books that you have bought here.</p>
                <a asp-controller="MyStore" asp-action="PurchaseHistory" class="btn btn-primary">View</a>
            </div>
        </div>
    </div>
</div>

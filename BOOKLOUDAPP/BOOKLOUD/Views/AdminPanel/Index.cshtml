
@model object

@{
    ViewBag.Title = "Admin Panel";
    Layout = "_Layout";
}

<div class="container pt-3" id="adminPanel">
    <h2>Admin Panel</h2>
    <div class="container">
        <div class="row" align="justify">
            <div class="col-sm-4 mb-2">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"><i class="fas fa-users-cog"></i> Manage User</h4>
                        <p class="card-text">User Management and Control.</p>
                        <a asp-controller="ManageUser" asp-action="UserManagement" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-4 mb-2">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"><i class="fas fa-university"></i> Manage Universities</h4>
                        <p class="card-text">Add, delete, edit university list.</p>
                        <a asp-controller="ManageUniversity" asp-action="UniversityManagement" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-4 mb-2">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"><i class="fas fa-graduation-cap"></i> Manage Courses</h4>
                        <p class="card-text">Add, delete, edit course list.</p>
                        <a asp-controller="ManageCourse" asp-action="CourseManagement" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>

        </div>
        <div class="row mt-4 mb-2" align="justify">
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"><i class="fas fa-copy"></i> Manage Units</h4>
                        <p class="card-text">Add, delete, edit unit list.</p>
                        <a asp-controller="ManageUnit" asp-action="UnitManagement" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-4 mb-2">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"><i class="fas fa-file-alt"></i> Generate Reports</h4>
                        <p class="card-text">Generate reports.</p>
                        <a asp-controller="AdminPanel" asp-action="Reports" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
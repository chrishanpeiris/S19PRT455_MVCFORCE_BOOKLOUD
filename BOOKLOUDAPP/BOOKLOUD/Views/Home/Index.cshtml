<!-- Add Book Modal -->
<div class="modal" id="addBookModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Add Books</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form asp-controller="AddBook" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="bookTitle" asp-for="BookName">Book Title</label>
                        <input asp-for="BookName" type="text" class="form-control" id="bookTitle" placeholder="Enter book title">
                    </div>
                    <div class="form-group">
                        <label for="bookAuthor" asp-for="BookAuthor">Author</label>
                        <input type="text" asp-for="BookAuthor" class="form-control" id="bookAuthor" placeholder="Enter author name">
                    </div>
                    <div class="form-group">
                        <label for="bookAuthor" asp-for="BookEdition">Edition</label>
                        <input type="text" asp-for="BookEdition" class="form-control" id="bookEdition" placeholder="Enter book edition">
                    </div>
                    <div class="form-group">
                        <label for="bookISBN" asp-for="BookISBN">ISBN</label>
                        <input type="text" asp-for="BookISBN" class="form-control" id="bookISBN" placeholder="Enter ISBN">
                    </div>
                    <div class="form-group">
                        <label asp-for="UniversityLocation" for="universityNameLocation">University</label>
                        <select asp-for="UniversityLocation" id="universityNameLocation" class="form-control">
                            <option>Charles Darwin University - Darwin</option>
                            <option>Swinburne University - Melbourne</option>
                            <option>La Trobe Univeristy - Sydny</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CourseName" for="courseName">Course</label>
                        <select asp-for="CourseName" id="courseName" class="form-control">
                            <option>Master of Information Technology (SE)</option>
                            <option>Master of Mechanical Engineering</option>
                            <option>Master of Data Science</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="unitCodeName">Unit</label>
                        <select id="unitCodeName" class="form-control">
                            <option>PRT455 - Software Engineering Practice</option>
                            <option>PRT820 - Master Thesis</option>
                            <option>DLF544 - Web Technologies</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="bookImage">Book Image</label>
                        <input type="file" class="form-control-file" id="bookImage">
                    </div>
                    <div class="form-group">
                        <label for="bookPrice">Book Price</label>
                        <input type="text" class="form-control" id="bookPrice" placeholder="Enter Book Price" required="true">
                    </div>
                    <div class="form-group">
                        <label for="bookISBN">Book Description</label>
                        <textarea class="form-control" id="bookISBN" placeholder="Enter book description"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>